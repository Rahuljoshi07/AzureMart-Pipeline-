{
    "name": "TR_Daily_Ingestion",
    "properties": {
        "description": "Scheduled trigger: runs the master orchestrator pipeline daily at 2:00 AM UTC",
        "type": "ScheduleTrigger",
        "typeProperties": {
            "recurrence": {
                "frequency": "Day",
                "interval": 1,
                "startTime": "2025-01-01T02:00:00Z",
                "timeZone": "UTC",
                "schedule": {
                    "hours": [2],
                    "minutes": [0]
                }
            }
        },
        "pipelines": [
            {
                "pipelineReference": {
                    "referenceName": "PL_Master_Orchestrator",
                    "type": "PipelineReference"
                },
                "parameters": {
                    "processing_mode": "incremental",
                    "sql_load_mode": "overwrite"
                }
            }
        ],
        "runtimeState": "Stopped",
        "annotations": ["retail", "daily", "scheduled"]
    }
}
